!include ..\makefile_vc_target_inc

All: fstdlib flls

fstdlib: $(FSTDLIB)

$(LINK_OBJS) : $(DEP_HDR)

$(FSTDLIB): $(LIB_OBJS)
!ifndef __MAKE__
	@$(LIBR) /nologo /OUT:$@ @<<
$(LIB_OBJS)
<<
!else
	@$(LIBR) /nologo /OUT:$@ @&&<
$(LIB_OBJS)
<
!endif

!ifndef __MAKE__
{$(LIBSRC)}.cpp{$(OBJDIR)}.obj::
	@$(CC) @<<
	$(CPPFLAGS) /Fo$(OBJDIR)\ $<
<<
!else
{$(LIBSRC)}.cpp{$(OBJDIR)}.obj:
	@$(CC) $(CPPFLAGS) /Fo$(OBJDIR)\ { $< }
!endif

{$(LIBSRC)}.asm{$(OBJDIR)}.obj:
	@ml /nologo /c /Fo$@ $<

$(RES): version.hpp

