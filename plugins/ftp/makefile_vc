$(LINK_OBJS) : $(DEP_HDR)

$(FSTDLIB): $(LIB_OBJS)
!ifndef __MAKE__
	@$(LIBR) /nologo /OUT:$@ @<<
$(LIB_OBJS)
<<
!else
	@$(LIBR) /nologo /OUT:$@ @&&<
$(LIB_OBJS)
<
!endif

!ifndef __MAKE__
{$(LIBSRC)}.cpp{$(INTDIR)}.obj::
	@$(CC) @<<
	$(CPPFLAGS) /Fo$(INTDIR)/ $<
<<
!else
{$(LIBSRC)}.cpp{$(INTDIR)}.obj:
	@$(CC) $(CPPFLAGS) /Fo$(INTDIR)/ { $< }
!endif

{$(LIBSRC)}.asm{$(INTDIR)}.obj:
	@ml /nologo /c /Fo$@ $<

