ALL: $(INSTALL) $(OUTDIR)$(ADDOUTDIR) $(OBJDIR) $(DLLFULLNAME)

$(DLLFULLNAME) : $(LINK_OBJS) $(RES) $(OUTDIR)$(ADDOUTDIR) $(LINK_DEP)
!ifndef __MAKE__
	$(LNK) @<<
	$(LINK_FLAGS) $(LINK_DEBUG) $(LIBS) $(LINK_OBJS) $(RES)
<<
!else
	@$(LNK) $(LINK_FLAGS) $(LINK_DEBUG) $(LIBS) $(LINK_OBJS) $(RES)
!endif
	-255 @copy /Y *.lng $(OUTDIR) > nul 2> nul
	-255 @copy /Y *.hlf $(OUTDIR) > nul 2> nul
	-255 @copy /Y *.reg $(OUTDIR) > nul 2> nul
	-255 @copy /Y *.temp $(OUTDIR) > nul 2> nul

!ifndef __MAKE__
.cpp{$(OBJDIR)}.obj::
	$(CC) @<<
	$(CFLAGS) $<
<<
!else
.cpp{$(OBJDIR)}.obj:
	@$(CC) $(CFLAGS) { $< } 
!endif

$(RES): $(RC_NAME).rc $(COMINC)\farversion.hpp
	@$(RC) /I"$(COMINC)" $(ENV_INC_OPT) $(RC_WIDE) /fo"$(RES)" $(RC_NAME).rc

$(OBJDIR): $(WORKDIR)
	@if not exist "$(OBJDIR)\$(NULL)" mkdir "$(OBJDIR)"

!ifdef ADDOUTDIR
$(OUTDIR)$(ADDOUTDIR): $(OUTDIR)
	@if not exist "$(OUTDIR)$(ADDOUTDIR)\$(NULL)" mkdir "$(OUTDIR)$(ADDOUTDIR)"
!endif

$(OUTDIR):
	@if not exist "$(OUTDIR)\$(NULL)" mkdir "$(OUTDIR)"

!ifdef INSTALL
$(WORKDIR):
	@if not exist "$(WORKDIR)\$(NULL)" mkdir "$(WORKDIR)"
!endif

