NAME = EMenu

!ifdef WIDE
DIRSUFF = W
!endif

!IF "$(CPU)" == "AMD64"
DIRBIT = 64
!ELSE
DIRBIT = 32
!ENDIF
OUTDIR = final.$(DIRBIT)$(DIRSUFF).vc

OBJDIR = $(OUTDIR)\obj
COMMON = ..\common
!ifndef WIDE
COMINC = $(COMMON)\ascii
!else
COMINC = $(COMMON)\unicode
CPP_WIDE = /DUNICODE /D_UNICODE
!endif
DLLNAME = $(NAME).dll
DLLFULLNAME = $(OUTDIR)\$(DLLNAME)
!ifndef WIDE
DEF = $(NAME).vc.def
!else
DEF = $(NAME)W.vc.def
!endif
MAP = $(OUTDIR)\$(NAME).map

!IF "$(CPU)" == "AMD64"
#LIBS =  libcmt.lib bufferoverflowu.lib chkstk.obj kernel32.lib user32.lib gdi32.lib advapi32.lib shell32.lib ole32.lib uuid.lib
LIBS =  $(COMMON)\libCRT64.lib chkstk.obj kernel32.lib user32.lib gdi32.lib advapi32.lib shell32.lib ole32.lib uuid.lib
CPP_PROJ=/nologo /c /W3 /Gy /GF /DNDEBUG /O1i /Zp8 /J /Wp64 /GS- /Gr /GR- /EHs-c- /LD /Fo"$(OBJDIR)\\" /I"$(COMMON)" /I"$(COMINC)" $(CPP_WIDE) /D_CRT_SECURE_NO_WARNINGS
ULOUT=-Tpd+
!ELSE
LIBS = $(COMMON)\libCRT.lib kernel32.lib user32.lib gdi32.lib advapi32.lib shell32.lib ole32.lib uuid.lib libcmt.lib
CPP_PROJ=/nologo /c /W3 /Gy /GF /DNDEBUG /O1i /J /Gr /GS- /GR- /EHs-c- /LD /Fo"$(OBJDIR)\\" /I"$(COMMON)" /I"$(COMINC)" $(CPP_WIDE) /D_CRT_SECURE_NO_WARNINGS
ULOUT=-Tpd -Re
!ENDIF

LINK_FLAGS=/nologo /dll /release /merge:.rdata=.text /opt:nowin98 /nodefaultlib /def:"$(DEF)" /map:"$(MAP)" /out:"$(DLLFULLNAME)" $(LIBS)
#LINK_FLAGS=/nologo /dll /release /merge:.rdata=.text /opt:nowin98 /def:"$(DEF)" /map:"$(MAP)" /out:"$(DLLFULLNAME)" $(LIBS)

ULFLG=-q $(ULOUT) -Gz -n -m- -Gh -Gh- 

RESS=$(OBJDIR)\$(NAME).res

LINK_OBJS = $(OBJDIR)\EMenu.obj \
$(OBJDIR)\auto_sz.obj \
$(OBJDIR)\FarMenu.obj \
$(OBJDIR)\MenuDlg.obj \
$(OBJDIR)\OleThread.obj \
$(OBJDIR)\Pidl.obj \
$(OBJDIR)\Plugin.obj


ALL: $(OUTDIR) $(OBJDIR) $(DLLFULLNAME)

$(DLLFULLNAME) : $(LINK_OBJS) $(RESS)
!ifndef ULINK
	link @<<
	$(LINK_FLAGS) $(LINK_OBJS) $(RESS)
<<
!else
        ulink +- @+<<
$(ULFLG) +
$(LINK_OBJS)
,$(DLLFULLNAME)
,$(MAP)
,$(LIBS)
,$(DEF)
,$(RESS)
<<
!endif
	@copy /Y *.hlf $(OUTDIR) > nul
	@copy /Y *.lng $(OUTDIR) > nul
	@copy /Y *.reg $(OUTDIR) > nul

.cpp{$(OBJDIR)}.obj::
	cl @<<
	$(CPP_PROJ) $<
<<

$(OBJDIR)\$(NAME).res: $(NAME).rc $(COMINC)\farversion.hpp resource.h
	@rc /I"$(COMINC)" /fo"$(OBJDIR)\$(NAME).res" $(NAME).rc

$(OBJDIR): $(OUTDIR)
	@if not exist "$(OBJDIR)\$(NULL)" mkdir "$(OBJDIR)"

$(OUTDIR):
	@if not exist "$(OUTDIR)\$(NULL)" mkdir "$(OUTDIR)"
