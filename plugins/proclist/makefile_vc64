OUTDIR = final.64.vc
OBJDIR = $(OUTDIR)\obj
NAME = Proclist
DLLNAME = $(NAME).dll
DLLFULLNAME = $(OUTDIR)\$(DLLNAME)
DEF = $(NAME).vc.def
MAP = $(OUTDIR)\$(NAME).map

LIBS = ..\common\libCRT64.lib chkstk.obj kernel32.lib user32.lib gdi32.lib advapi32.lib Version.Lib mpr.lib Ole32.Lib OleAut32.Lib
CPP_PROJ=/nologo /c /Zp8 /J /Wp64 /GS- /Gr /GR- /EHs-c- /LD /Fo"$(OBJDIR)\\" /I"..\common" /I".\WMI" /D "_WIN32_DCOM"
LINK_FLAGS=/nologo /dll /release /merge:.rdata=.text /machine:amd64 /opt:nowin98 /noentry /nodefaultlib /def:"$(DEF)" /map:"$(MAP)" /out:"$(DLLFULLNAME)" $(LIBS)

LINK_OBJS = $(OBJDIR)\fileio.obj \
$(OBJDIR)\handles.obj \
$(OBJDIR)\PCFG.OBJ \
$(OBJDIR)\Pclass.obj \
$(OBJDIR)\perfthread.obj \
$(OBJDIR)\PLIST95.OBJ \
$(OBJDIR)\Plistnt.obj \
$(OBJDIR)\Pmix.obj \
$(OBJDIR)\preg.obj \
$(OBJDIR)\WMI.obj \
$(OBJDIR)\Proclist.obj \
$(OBJDIR)\$(NAME).res

ALL: $(OUTDIR) $(OBJDIR) $(DLLFULLNAME)

$(DLLFULLNAME) : $(LINK_OBJS)
	link @<<
	$(LINK_FLAGS) $(LINK_OBJS)
<<
	@copy /Y *.hlf $(OUTDIR) > nul
	@copy /Y *.lng $(OUTDIR) > nul

.cpp{$(OBJDIR)}.obj::
	cl @<<
	$(CPP_PROJ) $<
<<

$(OBJDIR)\$(NAME).res: $(NAME).rc ..\common\farversion.hpp
	@rc /fo"$(OBJDIR)\$(NAME).res" $(NAME).rc

$(OBJDIR): $(OUTDIR)
	@if not exist "$(OBJDIR)\$(NULL)" mkdir "$(OBJDIR)"

$(OUTDIR):
	@if not exist "$(OUTDIR)\$(NULL)" mkdir "$(OUTDIR)"
