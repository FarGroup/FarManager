	$(MAKE) -f makefile_gcc_fmt FMT=Ha
	$(MAKE) -f makefile_gcc_fmt FMT=Lzh
	$(MAKE) -f makefile_gcc_fmt FMT=Rar
	$(MAKE) -f makefile_gcc_fmt FMT=TarGz
	$(MAKE) -f makefile_gcc_fmt FMT=Zip
