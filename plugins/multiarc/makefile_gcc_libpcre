ANSI = 1
USERCPP = -DWIN32 -DPCRE_STATIC -D_WIN32

include ../makefile_gcc_def_inc

DLLNAME = libPCRE.a
DLLFULLNAME = $(OBJDIR)/$(DLLNAME)
SRCS = get.c pcre.c study.c

OBJS = $(patsubst %.c,$(OBJDIR)/%.o,$(filter %.c,$(SRCS)))
DEPS = $(patsubst %.c,$(OBJDIR)/%.d,$(filter %.c,$(SRCS)))

all: $(DLLFULLNAME)

$(OBJDIR)/%.d: ./libpcre/%.c
	@echo making depends for $<
	@$(MKDIR) -p $(@D)
	@$(SHELL) -ec '$(CC) -c -MM $(CPPFLAGS) $< \
                | sed '\''s/\($*\)\.o[ :]*/$(REOBJDIR)\1.o $(REOBJDIR)\1.d: /g'\'' > $@; [ -s $@ ] || $(RM) $@'

$(OBJDIR)/%.o: ./libpcre/%.c
	@echo compiling $<
	@$(MKDIR) -p $(@D)
	@$(CC) $(CPPFLAGS) -c -o $@ $<

$(DLLFULLNAME): $(OBJS)
	@echo linking $@
	@$(MKDIR) -p $(@D)
	@$(AR) rc $(DLLNAME) $(OBJS)
	@$(RANLIB) $(DLLNAME)
	@$(MV) $(DLLNAME) $(OBJDIR)

-include $(DEPS)
