ALLDIRS = align autowrap brackets compare drawline editcase farcmds \
          filecase hlfviewer macroview network proclist tmppanel ftp multiarc

all: libcrt libpluginreg $(ALLDIRS)

FICTIVE=_fictive_
$(FICTIVE):

libcrt: $(FICTIVE)
	@echo ===========CRT library
	@$(MAKE) -C common/CRT -f makefile_lib_gcc

pluginreg: $(FICTIVE)
	@echo ===========pluginreg library
	@$(MAKE) -C common/pluginreg -f makefile_lib_gcc

$(ALLDIRS): $(FICTIVE)
	@echo ===========$@
	@$(MAKE) -C $@ -f makefile_gcc
