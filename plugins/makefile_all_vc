        @cd common\CRT
        @$(MAKE) -s -f makefile_lib_vc
        @cd ..\..

$(ALLDIRS): $(FICTIVE)
	@echo ===========$@
        @cd $@
        @$(MAKE) -s -f makefile_vc $(_MDEFS)
        @cd ..

