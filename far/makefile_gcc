DIRBIT = 32
OBJDIR = ./Release.$(DIRBIT).gcc/obj
EXEDIR = ./Release.$(DIRBIT).gcc
EXENAME = Far.exe
EXEFULLNAME = $(EXEDIR)/$(EXENAME)
FARINCLUDE = ./Include
DEF = far.def
DEPFILE = far.gcc.dep

SRCS = 	cddrv.cpp \
	CFileMask.cpp \
