<?xml version="1.0" encoding="UTF-8" ?>
<farconfig>
  <macros>
    <keymacros>
      <macro area="Shell" key="CtrlQ" flags="DisableOutput" description="Toggle quick view panel"><text>Keys('Tab') if Area.QView then Keys('Tab Ctrl2 Tab CtrlClear') else Keys('Tab Ctrl6 Tab') if APanel.Left then for ii=1,APanel.Width do Keys('CtrlRight') end else for ii=1,APanel.Width do Keys('CtrlLeft') end end end Keys('Tab CtrlQ')</text></macro>
    </keymacros>
  </macros>
</farconfig>
