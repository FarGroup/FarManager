<?xml version="1.0" encoding="UTF-8" ?>
<farconfig>
  <macro>
    <keymacros>
      <macro area="Dialog" key="ShiftBS" flags="DisableOutput" description="Converts the word before cursor using XLat function">CtrlShiftLeft $XLat CtrlRight</macro>
      <macro area="Editor" key="ShiftBS" flags="DisableOutput" description="Converts the word before cursor using XLat function">CtrlShiftLeft $XLat CtrlRight</macro>
      <macro area="Shell" key="ShiftBS" flags="DisableOutput|NotEmptyCommandLine" description="Converts the word before cursor using XLat function">CtrlShiftLeft $XLat CtrlRight</macro>
    </keymacros>
  </macro>
</farconfig>
